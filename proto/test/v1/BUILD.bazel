load("@io_bazel_rules_go//proto:def.bzl", "go_proto_library")

package(
    default_visibility = ["//visibility:public"],
)

licenses(["notice"])  # Apache 2.0

exports_files(["LICENSE"])

proto_library(
    name = "conformance_test_protos",
    srcs = [
        "conformance-test.proto",
    ],
    deps = [
        "@com_google_googleapis//google/api/expr/v1alpha1:checked_proto",
        "@com_google_googleapis//google/api/expr/v1alpha1:eval_proto",
        "@com_google_googleapis//google/api/expr/v1alpha1:value_proto",
        "@com_google_protobuf//:empty_proto",
    ],
)

cc_proto_library(
    name = "conformance_test_cc_proto",
    deps = [":conformance_test_protos",],
)

go_proto_library(
    name = "conformance_test_go_proto",
    proto = ":conformance_test_protos",
    importpath = "github.com/google/cel-spec/proto/test/v1/conformanceTest",
    deps = [
        "@org_golang_google_genproto//googleapis/api/expr/v1alpha1:go_default_library",
    ],
)
